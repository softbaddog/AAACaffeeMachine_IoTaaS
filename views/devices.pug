extends layout

block content
  .container
    .row
      each item in devices
        .col-md-3
          a(href="/devices/" + item._id + "?pageNo=0&pageSize=15")
            img(src="/img/DeltaCafe.png", alt="#{item.nodeName}")
          .caption
            h4 #{item.nodeName}
            a.btn.btn-primary(href="/devices/#{item._id}", role="button") Open