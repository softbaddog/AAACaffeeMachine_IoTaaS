.jumbotron
  h1= title
  if (!user)
    p= desc
  else
    p You are currently logged in as #{user.id}

  ul.nav
    if (!user)
      li.nav-item
        a.nav-link(href="/login") Login
      li.nav-item
        a.nav-link(href="/") Home
    if (user)
      li.nav-item
        a.nav-link(href="/logout") Logout
      li.nav-item
        a.nav-link(href="/products") Product
      li.nav-item
        a.nav-link(href="/admin/list") Admin
      li.nav-item
        a.nav-link(href="/admin/new") New